# API Configuration
API_KEY=your_api_key_here
AUTH_ENABLED=true

# OpenAI Configuration (required for enhanced validation)
OPENAI_API_KEY=your_openai_api_key_here
SEMANTIC_VALIDATION_ENABLED=true

# Service Information
SERVICE_NAME=ai-validation-service
SERVICE_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGFIRE_API_KEY=  # Optional, for advanced monitoring

# CORS Settings
CORS_ORIGINS=*  # For development; use comma-separated URLs in production 